<%= form_for(wing_order) do |f| %>
  <% if wing_order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wing_order.errors.count, "error") %> prohibited this wing_order from being saved:</h2>

      <ul>
      <% wing_order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :customer_name, "Full Name" %>
    <%= f.text_field :customer_name %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.select :state, @state_collection %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.collection_radio_buttons :quantity, @quantity_collection, :first, :last %>
  </div>

  <div class="field">
    <%= f.label :ranch_dressing, "Add Ranch Dressing" %>
    <%= f.check_box :ranch_dressing %>
  </div>

  <div class="field">
    <%= f.label :flavors %>
    <%= f.collection_check_boxes :flavor_ids, @flavor_collection, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit "Place Order" %>
  </div>
<% end %>
